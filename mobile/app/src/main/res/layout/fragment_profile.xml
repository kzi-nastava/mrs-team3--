<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_profile"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_alignParentStart="true"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:textSize="14sp"
                        app:backgroundTint="#9B7FC9"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_ime"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_ime"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_prezime"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_prezime"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_prezime"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_email"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_email"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_phone"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_phone"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="phone"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_address"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_address"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:layout_marginTop="24dp"
                    app:strokeColor="#9B7FC9"
                    app:strokeWidth="2dp"
                    app:backgroundTint="@android:color/white"
                    android:textColor="#666666"/>

                <LinearLayout
                    android:id="@+id/driverSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Active Hours Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#9B7FC9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                android:layout_marginEnd="12dp"
                                app:tint="@android:color/white" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mock_active_hours"
                                    android:textSize="12sp"
                                    android:textColor="#EDE7F6"/>

                                <TextView
                                    android:id="@+id/tvActiveHours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mock_hours"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_model"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvVehicleModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_model"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etVehicleModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_model"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/license_plate"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvLicensePlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_license_plate"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="#F5F5F5"/>

                    <EditText
                        android:id="@+id/etLicensePlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_license_plate"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seats"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_seats"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="#F5F5F5"/>

                    <EditText
                        android:id="@+id/etSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mock_seats"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:inputType="number"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_requests"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/changeRequestCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:id="@+id/tvChangeField"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone_number_2"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#333333"/>

                                <TextView
                                    android:id="@+id/tvChangeStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pending"
                                    android:textSize="12sp"
                                    android:textColor="#FFA000"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="4dp"
                                    android:background="#FFF3E0"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvChangeValues"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/request_number_mock"
                                android:textSize="14sp"
                                android:textColor="#555555"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvChangeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mock_date_request"
                                android:textSize="12sp"
                                android:textColor="#999999"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>